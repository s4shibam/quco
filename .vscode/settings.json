{
  // Set Biome as the default formatter
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  // Enable format on save globally
  "editor.formatOnSave": true,
  // Enable organize imports on save globally
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  // Enable Biome as the default formatter globally
  "editor.defaultFormatter": "biomejs.biome",
  "cSpell.words": ["esac", "quco", "TLLM"]
}
